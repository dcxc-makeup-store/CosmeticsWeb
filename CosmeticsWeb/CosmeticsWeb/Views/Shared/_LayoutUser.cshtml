@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="navbar navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand hidden-sm" href="/">dcxc美妆小店</a>
        </div>
        <div class="navbar-collapse collapse" role="navigation">
            <ul class="nav navbar-nav">

                @*<li>@Html.ActionLink("化妆品分类管理", "Index", "AdminBookType")</li>
                    <li>@Html.ActionLink("化妆品管理", "List", "AdminCosmetic")</li>*@
            </ul>
            <ul class="nav navbar-nav navbar-right hidden-sm">
                <li>
                    <!-- 判断用户是否已经登录，显示对应的信息 -->
                    @if (Session["userNow"] == null)
                    {
                        @Html.ActionLink("你好，请登录", "Login", "Account")
                    }
                    else
                    {
                        CosmeticsWeb.Models.EF.User userNow = Session["userNow"] as CosmeticsWeb.Models.EF.User;
                        <span> @userNow.UserName </span>
                    }
                </li>
                <li>
                    @Html.ActionLink("免费注册", "Registe", "Account")
                </li>
                <li id="cartarea">
                    <!--购物车-->
                    @Html.Action( "ShowMyCart", "Cart")
                </li>
            </ul>
        </div>
    </div>
</div>





<div>
    @RenderBody()

</div>

@section Scripts {
    @RenderSection("scripts", required: false)
}
